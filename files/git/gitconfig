# vim: set filetype=gitconfig :

[alias]
	co = checkout
	di = diff --no-prefix
	explain = blame
	ga = "!f() { git graph --all; }; f"
	gh-pr = "!f() { git fetch $1 pull/$2/head:pr-$2; }; f"
	graph = log --decorate --graph --oneline
	graph = log --graph --pretty='%C(auto)%h%d %C(cyan)%an%C(reset) %s'
	show-fixup = "!f() { git di $1^^..\"$@\"; }; f"
[color]
	ui = true
[color "diff-highlight"]
	oldHighlight = bold ul
	oldReset = nobold noul
[commit]
	template = ~/.gitmsg.txt
[core]
	excludesfile = ~/.gitignore
	ignorecase = false
	pager = delta
[delta]
	line-numbers = true
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[push]
	default = simple
[user]
	name = Chris Bandy
	email = bandy.chris@gmail.com
[versionsort]
	suffix = -beta
	suffix = -rc
